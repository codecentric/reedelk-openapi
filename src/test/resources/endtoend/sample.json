{
  "openapi": "3.0.3",
  "info": {
    "title": "API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/api/v3"
    }
  ],
  "paths": {
    "/order": {
      "get": {
        "summary": "GET Operation Summary",
        "description": "GET Operation Description",
        "operationId": "getOperation",
        "responses": {
          "200": {
            "description": "Content description",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/mySchemaId"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "mySchemaId": {
        "type": "object",
        "required": [
          "name",
          "photoUrls"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "doggie"
          },
          "photoUrls": {
            "type": "array",
            "items": {
              "type": "string",
              "xml": {
                "name": "photoUrl"
              }
            },
            "xml": {
              "wrapped": true
            }
          },
          "id": {
            "format": "int64",
            "type": "integer"
          },
          "tags": {
            "type": "array",
            "items": {
              "xml": {
                "name": "tag"
              }
            },
            "xml": {
              "wrapped": true
            }
          },
          "status": {
            "type": "string",
            "description": "pet status in the store",
            "enum": [
              "available",
              "pending",
              "sold"
            ]
          }
        }
      }
    }
  }
}
